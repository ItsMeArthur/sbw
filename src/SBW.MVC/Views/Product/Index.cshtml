@model List<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div>
        <form>
            <div class="col-md-2 col-sm-4">
                <input type="text" name="Description" class="form-control" placeholder="Search by description" required>
            </div>

            <div class="col-md-2 col-sm-4">
                <input type="submit" class="btn btn-default pull-left" value="Search" />
            </div>
        </form>
    </div>
    <div class="col-md-8 col-sm-4">
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary pull-right">Add Product</a>
    </div>
</div>

<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Brand</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Brand</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>