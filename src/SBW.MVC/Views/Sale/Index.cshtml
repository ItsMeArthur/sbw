@model List<Sale>

@{
    ViewData["Title"] = "Sales";
}

<div class="row">
    <div>
        <form>
            <div class="col-md-2 col-sm-4">
                <input type="text" name="Description" class="form-control" placeholder="Search by description" required>
            </div>

            <div class="col-md-2 col-sm-4">
                <input type="submit" class="btn btn-default pull-left" value="Search" />
            </div>
        </form>
    </div>
    <div class="col-md-8 col-sm-4">
        <a asp-controller="Sale" asp-action="Create" class="btn btn-primary pull-right">Add Sale</a>
    </div>
</div>

<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Customer</th>
                <th scope="col">Description</th>
                <th scope="col">Date</th>
                <th scope="col">Status</th>
                <th scope="col">Closed</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Customer.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@(item.IsActive ? "Active" : "Inactive")</td>
                    <td>@(item.IsClosed ? "Yes" : "No")</td>
                    <td>
                        <a asp-controller="Sale" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="Sale" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

