@model SaleItemViewModel

@{
    ViewData["Title"] = "Add Item";
}

<form asp-action="AddItem" method="post" class="form-horizontal" role="form">

    @Html.HiddenFor(vm => vm.SaleItem.SaleId);

    <div class="form-group">
        <label asp-for="SaleItem.ProductId" class="col-md-2 control-label">Product</label>
        <div class="col-md-5">
            @Html.DropDownListFor(m => m.SaleItem.ProductId, Model.ProductNamesListItem.OrderBy(c => c.Text), new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label asp-for="SaleItem.Quantity" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input type="number" asp-for="SaleItem.Quantity" class="form-control" required/>
            <span asp-validation-for="SaleItem.Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="SaleItem.Price" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="SaleItem.Price" class="form-control" required/>
            <span asp-validation-for="SaleItem.Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset col-md-7">
            <input type="submit" class="btn btn-primary pull-right" value="Add" />
        </div>
    </div>

</form>